            will-change: transform, text-shadow;
        }

        @keyframes pulseGlow {
            from { text-shadow: 0 0 10px #fff, 0 0 20px #ff2e63, 0 0 30px #08f; }
            to { text-shadow: 0 0 25px #fff, 0 0 50px #ffd700, 0 0 60px #ff2e63; }
        }

        @keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
